INCLUDE" gb-prelude.ft"
INCLUDE" array.ft"
INCLUDE" text.ft"

VARIABLE: ASCII-PATTERN
VARIABLE: ASCII-SIZE

INCBIN" ascii.bin"
ASCII-PATTERN !
ASCII-SIZE !

\ Disable LCD during VBLANK
WAIT-VBLANK
00h 
  LCD-DISABLE 
LCDC C!

\ Set palette
11111100b BGP C!

\ Copy font pattern to VRAM
ASCII-SIZE @ ASCII-PATTERN @ TILE-PATTERN-0 MEMCPY

" HELLO WORLD" PRINT

\ Enable LCD
00h
  LCD-ENABLE
  LCD-WINDOW-DISABLE
  LCD-BG-TILE-PATTERN-0
  LCD-BG-TILE-MAP-0
  LCD-OBJ-DISABLE
  LCD-BG-WINDOW-ENABLE
LCDC C!

